  <ItemGroup>
    <ProjectReference Include="..\NEbml\Src\Core\Core.csproj" />
    <ProjectReference Include="..\OggMuxer\OggMuxer.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="yandex\cloud\ai\stt\v3\stt.proto" GrpcServices="Client" />
