    <None Remove="chunks\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="yandex\cloud\ai\stt\v3\stt.proto" />
    <None Remove="yandex\cloud\ai\stt\v3\stt_service.proto" />
